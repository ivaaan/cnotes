{
    "compilerOptions": {
      "target": "ES2021",
      "module": "commonjs",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "baseUrl": "./",
      "paths": {
        "*": ["*", "node_modules/*"]
      }
    },
    "include": ["./*.ts", "__tests__/server.test.ts"],
    "exclude": ["node_modules", "dist"]
  }
  